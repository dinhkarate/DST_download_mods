import re

def find_paths_with_steamapps(text):
    """
    Tìm tất cả các đường dẫn chứa '\\steamapps\\' trong văn bản.

    Args:
    text (str): Đoạn văn bản cần tìm kiếm.

    Returns:
    list: Danh sách các đường dẫn chứa '\\steamapps\\'.
    """
    # Biểu thức chính quy để tìm đường dẫn chứa "\\steamapps\\"
    pattern = r'[^\\]*\\steamapps[^\\]*'
    
    # Tìm kiếm trong văn bản
    matches = re.findall(pattern, text)
    
    return matches

# Đoạn văn bản mẫu
# text = """
# [Workshop] ODPUF is trying to unpack the mod into folder: D:\\SteamLibrary\\steamapps\\workshop\\content\\322330\\812713308\\96096711158047313_legacy.bin
#[00:00:00]: Authorized application D:\\SteamLibrary\\steamapps\\common\\Don't Starve Together\\bin64\\dontstarve_steam_x64.exe
# """

# Sử dụng hàm để tìm các đường dẫn chứa '\\steamapps\\'
paths = find_paths_with_steamapps(text)

